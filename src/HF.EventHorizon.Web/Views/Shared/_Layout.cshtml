<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HF.EventHorizon.Web</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/HF.EventHorizon.Web.styles.css" asp-append-version="true" />
    <style>
        .dropdown-submenu {
            position: relative;
        }

        .dropdown-submenu .dropdown-menu {
            top: 0;
            left: 100%;
            margin-top: -1px;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">HF.EventHorizon.Web</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                        <!-- Grouped controller dropdown menu -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" id="controllersDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Controllers
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="controllersDropdown">
                                <li class="dropdown-submenu">
                                    <a class="dropdown-item dropdown-toggle" href="#">BrowsedAddresses</a>
                                    <ul class="dropdown-menu">
                                        <li><a class="dropdown-item" asp-area="" asp-controller="BrowsedAddresses" asp-action="Index">Index</a></li>
                                        <li><a class="dropdown-item" asp-area="" asp-controller="BrowsedAddresses" asp-action="Create">Create</a></li>
                                        <li><a class="dropdown-item" asp-area="" asp-controller="BrowsedAddresses" asp-action="Details">Details</a></li>
                                    </ul>
                                </li>
                                <li class="dropdown-submenu">
                                    <a class="dropdown-item dropdown-toggle" href="#">DestinationMaps</a>
                                    <ul class="dropdown-menu">
                                        <li><a class="dropdown-item" asp-area="" asp-controller="DestinationMaps" asp-action="Index">Index</a></li>
                                        <li><a class="dropdown-item" asp-area="" asp-controller="DestinationMaps" asp-action="Create">Create</a></li>
                                        <li><a class="dropdown-item" asp-area="" asp-controller="DestinationMaps" asp-action="Details">Details</a></li>
                                    </ul>
                                </li>
                                <li class="dropdown-submenu">
                                    <a class="dropdown-item dropdown-toggle" href="#">ProtocolConnections</a>
                                    <ul class="dropdown-menu">
                                        <li><a class="dropdown-item" asp-area="" asp-controller="ProtocolConnections" asp-action="Index">Index</a></li>
                                        <li><a class="dropdown-item" asp-area="" asp-controller="ProtocolConnections" asp-action="Create">Create</a></li>
                                        <li><a class="dropdown-item" asp-area="" asp-controller="ProtocolConnections" asp-action="Details">Details</a></li>
                                    </ul>
                                </li>
                                <li class="dropdown-submenu">
                                    <a class="dropdown-item dropdown-toggle" href="#">ProtocolPlugins</a>
                                    <ul class="dropdown-menu">
                                        <li><a class="dropdown-item" asp-area="" asp-controller="ProtocolPlugins" asp-action="Index">Index</a></li>
                                        <li><a class="dropdown-item" asp-area="" asp-controller="ProtocolPlugins" asp-action="Create">Create</a></li>
                                        <li><a class="dropdown-item" asp-area="" asp-controller="ProtocolPlugins" asp-action="Details">Details</a></li>
                                    </ul>
                                </li>
                                <li class="dropdown-submenu">
                                    <a class="dropdown-item dropdown-toggle" href="#">RoutingRules</a>
                                    <ul class="dropdown-menu">
                                        <li><a class="dropdown-item" asp-area="" asp-controller="RoutingRules" asp-action="Index">Index</a></li>
                                        <li><a class="dropdown-item" asp-area="" asp-controller="RoutingRules" asp-action="Create">Create</a></li>
                                        <li><a class="dropdown-item" asp-area="" asp-controller="RoutingRules" asp-action="Details">Details</a></li>
                                    </ul>
                                </li>
                            </ul>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - HF.EventHorizon.Web - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        // Custom JavaScript to handle nested dropdowns
        document.addEventListener('DOMContentLoaded', function () {
            var dropdowns = document.querySelectorAll('.dropdown-submenu .dropdown-toggle');
            dropdowns.forEach(function (dropdown) {
                dropdown.addEventListener('click', function (e) {
                    e.preventDefault();
                    e.stopPropagation();
                    var submenu = this.nextElementSibling;
                    if (submenu) {
                        submenu.classList.toggle('show');
                    }
                });
            });
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
